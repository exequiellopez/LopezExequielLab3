<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#00ff99</item>
        <item name="colorPrimaryDark">#0099ff</item>
        <item name="colorAccent">#ff0000</item>

    </style>

    <style name="topBar">
        <item name="android:background">@android:color/holo_blue_bright</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_width">412dp</item>
        <item name="android:layout_height">47dp</item>
    </style>


    <style name="travelAdvisorImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">360dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="titleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">serif"</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">30sp</item>
    </style>


    <style name="locationLinearLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="locationText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="locationActual">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="distanceLinearLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="distanceText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">100dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_weight">1</item>

    </style>


    <style name="distanceActual">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">100dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_weight">1</item>
    </style>


    <style name="buttonLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">251dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="buttonBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
    </style>


    <style name="buttonNext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">45dp</item>
        <item name="android:layout_marginStart">160dp</item>
    </style>

</resources>
