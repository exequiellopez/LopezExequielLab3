<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView10"
        style="@style/topBar"
        android:text="Styles &amp; Material Design"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/imageView"
        style="@style/travelAdvisorImage"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/museopambata"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="47dp" />

    <TextView
        android:id="@+id/textView2"
        style="@style/titleText"
        android:text="Museo Pambata"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="406dp" />

    <LinearLayout
        style="@style/locationLinearLayout"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="475dp">

        <TextView
            android:id="@+id/textView3"
            style="@style/locationText"
            android:text="Location:" />

        <TextView
            android:id="@+id/textView8"
            style="@style/locationActual"
            android:layout_width="wrap_content"
            android:text="Roxas Blvd, Ermita, Manila" />

    </LinearLayout>

    <LinearLayout
        style="@style/distanceLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="494dp">

        <TextView
            android:id="@+id/textView4"
            style="@style/distanceText"
            android:text="Distance from UST:" />

        <TextView
            android:id="@+id/textView9"
            style="@style/distanceActual"
            android:text="4.3 kilometers" />

    </LinearLayout>

    <LinearLayout
        style="@style/buttonLinearLayout"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="232dp"
        tools:layout_editor_absoluteY="562dp">

        <Button
            android:id="@+id/button3"
            style="@style/buttonBack"
            android:text="Back" />

        <Button
            android:id="@+id/button4"
            style="@style/buttonNext"
            android:text="Next" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>